<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".LaminaUnoActivity" >

    <ImageView
        android:id="@+id/img_fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/desc"
        android:scaleType="fitXY"
        android:src="@drawable/fondo_mapas" />

    <RelativeLayout
        android:id="@+id/zona_zoomable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="190dp"
        android:layout_height="416dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-7dp"
        android:background="@drawable/panel_final"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_chile"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="155dp"
            android:background="@drawable/boton"
            android:text="CHILE"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_argentina"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/boton"
            android:text="ARGENTINA"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_peru"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="225dp"
            android:background="@drawable/boton"
            android:text="PERÃš"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_brasil"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/boton"
            android:text="BRASIL"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_ecuador"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="295dp"
            android:background="@drawable/boton"
            android:text="ECUADOR"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_colombia"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/boton"
            android:text="COLOMBIA"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_internacional"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="119dp"
            android:background="@drawable/boton"
            android:text="INTERNACIONAL"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_logo_pasajero_virtual_dos"
        android:layout_width="210dp"
        android:layout_height="160dp"
        android:layout_marginLeft="1050dp"
        android:layout_marginTop="555dp" >

        <ImageView
            android:id="@+id/image_logo_pasajero_virtual_dos"
            android:layout_width="210dp"
            android:layout_height="160dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/logo_pasajero_virtual_dos" >
        </ImageView>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/lay_imag_destinos"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="670dp" >

        <Button
            android:id="@+id/button_nuestros_destinos"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/boton_conoce_nuestros_destinos"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_imag_flota"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="670dp" >

        <Button
            android:id="@+id/button_nuestra_flota"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/boton_conoce_nuestra_flota"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/go_game_master"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="990dp"
        android:layout_marginTop="20dp"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/go_game_texto"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="82dp" >

            <Button
                android:id="@+id/btn_ir_al_juego_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/etiqueta_despegar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/go_game_circulo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/btn_ir_al_juego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/circulo_avion" />
        </RelativeLayout>
    </RelativeLayout>

    <VideoView
        android:id="@+id/video_lamina_uno"
        android:layout_width="1280dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/lay_video_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <VideoView
            android:id="@+id/video_main"
            android:layout_width="1280dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/lay_btn_comenzar"
            android:layout_width="600dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="284dp" >

            <Button
                android:id="@+id/btn_com"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_comenzar"
                android:text="COMENZAR"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_fade_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fade_white"
        android:visibility="gone" />

</RelativeLayout>